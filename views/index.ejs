<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
<body id="default_theme" class="it_service" lang="<%- lang %>">

<%- include('partials/header') %>
<section class="tm-banner">
  <!-- Flexslider -->
  <div class="flexslider flexslider-banner">
    <ul class="slides">
      <% if(banners.length > 0) {%>
        <% for(let i=0; i < banners.length; i++) { %>
      <li>
        <img src="/uploads/banners/<%- banners[i].img_name %>" alt="Image" />
      </li>
      <% } %>
      <% } %>
    </ul>
  </div>
</section>


<!-- gray bg -->
<section class="container tm-home-section-1" id="more">
  <div class="section-margin-top" id="visit">
    <div class="row">
      <div class="tm-section-header">
        <div class="col-lg-3 col-md-3 col-sm-3">
          <hr>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
          <h2 class="tm-section-title" data-key="current" >Current</h2>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3">
          <hr>
        </div>
      </div>
    </div>
    <div class="row reveal active">
      <% if(posts.length > 0) {%>
        <% for(let i=0; i < limit; i++) { %>
          <% if(posts[i].post_category == 'current') {%>
      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 col-xxs-12" style="float: right;">
        <div class="tm-home-box-2">
          <a href="/<%- lang %>/services/<%- posts[i].id %>">
          <img src="/uploads/posts/<%- posts[i].post_img %>" alt="image" class="img-responsive">
          <h3><%- posts[i].title %></h3>
          <p class="tm-date"><%- posts[i].createdAt %></p>
           </a>
        </div>
      </div>
      <% } %>
      <% } %>
      <% } %>
    </div>
  </div>
</section>
<!-- Banner -->

<!-- white bg -->
<section class="tm-white-bg section-padding-bottom">
  <div class="container reveal">
    <div class="row">
      <div class="tm-section-header section-margin-top" id="popular">
        <div class="col-lg-4 col-md-3 col-sm-3">
          <hr>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-6">
          <h2 class="tm-section-title" data-key="submitted" >submitted</h2>
        </div>
        <div class="col-lg-4 col-md-3 col-sm-3">
          <hr>
        </div>
      </div>
      <% if(posts.length > 0) {%>
        <% for(let i=0; i < limit; i++) { %>
          <% if(posts[i].post_category == 'submitted') {%>
      <div class="col-lg-6">
        <div class="tm-home-box-3">
          <a href="/<%- lang %>/services/<%- posts[i].id %>">
          <div class="tm-home-box-3-img-container">
            <img src="/uploads/posts/<%- posts[i].post_img %>" alt="image" class="img-responsive">
          </div>
          <div class="tm-home-box-3-info">
            <p class="tm-home-box-3-description"  ><%- posts[i].description %></p>
            <p class="tm-date"><%- posts[i].createdAt %></p>
          </div>
          </a>
        </div>
      </div>
      <% } %>
      <% } %>
      <% } %>
    </div>
  </div>
</section>

<section class="container tm-home-section-1" id="more">
  <div class="section-margin-top" id="visit">
    <div class="row">
      <div class="tm-section-header">
        <div class="col-lg-3 col-md-3 col-sm-3">
          <hr>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
          <h2 class="tm-section-title" data-key="projects" >Projects</h2>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3">
          <hr>
        </div>
      </div>
    </div>
    <div class="row reveal">
      <% if(posts.length > 0) {%>
        <% for(let i=0; i < limit; i++) { %>
          <% if(posts[i].post_category == 'projects') {%>
      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 col-xxs-12" style="float: right;">
        <div class="tm-home-box-2">
          <a href="/<%- lang %>/services/<%- posts[i].id %>">
          <img src="/uploads/posts/<%- posts[i].post_img %>" alt="image" class="img-responsive">
          <h3 ><%- posts[i].title %></h3>
          <p class="tm-date"><%- posts[i].createdAt %></p>
           </a>
        </div>
      </div>
      <% } %>
      <% } %>
      <% } %>
    </div>
  </div>
</section>
<%- include('partials/footer') %>
<%- include('partials/js') %>
</body>
</html>

