<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
<body id="default_theme" class="it_service" lang="<%- lang %>">

<%- include('partials/header') %>
<section class="tm-white-bg section-padding-bottom reveal active">
  <div class="container">
    <div class="row">
      <div class="tm-section-header section-margin-top">
        <div class="col-lg-4 col-md-3 col-sm-3"><hr></div>
        <div class="col-lg-4 col-md-6 col-sm-6"><h2 class="tm-section-title" data-key="biz" >What we do</h2></div>
        <div class="col-lg-4 col-md-3 col-sm-3"><hr></div>
      </div>
    </div>
    <div class="row">
      <!-- Testimonial -->
      <div class="col-lg-12">
        <div class="tm-what-we-do-right">
          <% if(posts.length > 0) {%>
            <% for(let i=0; i < limit; i++) { %>
              <% if(posts[i].post_category == 'current') {%>
          <div class="tm-about-box-2 reveal active">
            <a href="/<%- lang %>/services/<%- posts[i].id %>">
            <img src="/uploads/posts/<%- posts[i].post_img %>" alt="image" class="tm-about-box-2-img">
            <div class="tm-about-box-2-text">
              <h3 class="tm-about-box-2-title"><%- posts[i].title %></h3>
              
                      <p class="tm-about-box-2-description gray-text"><%- posts[i].description %></p>
                      
            </div>
            </a>
          </div>
          <% } %>
          <% } %>
          <% } %>
        </div>
        <!-- --------------------------- -->
      </div>
    </div>
  </div>
</section>
<%- include('partials/footer') %>
<%- include('partials/js') %>
</body>
</html>

