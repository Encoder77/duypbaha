<div class="section padding_layout_1 blog_list">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 pull-right">
        <div class="full">
          <% if(posts.length > 0) {%>
          <% for(let i=0; i < limit; i++) { %>
          <div class="blog_section">
          <section class="articles">
            <article>
              <div class="article-wrapper">
                <figure>
                  <img src="/uploads/posts/<%- posts[i].post_img %>" alt="" />
                </figure>
                <div class="article-body">
                  <h2><%- posts[i].title %></h2>
                  <div class="post_info">
                    <ul>
                      <li><i class="fa fa-comment" aria-hidden="true"></i> <%- posts[i].comment_count %></li>
                      <li><i class="fa fa-calendar" aria-hidden="true"></i> <%- posts[i].createdAt %></li>
                    </ul>
                  </div>
                  <p>Bahasy: <%- posts[i].excerpt %> TMT</p>
                  <a href="/<%- lang %>/blog/<%- posts[i].id %>" data-key="podrobnee" class="read-more">
                     <span class="sr-only">about this is some title</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </a>
                </div>
              </div>
            </article>
          </section>
        </div>
          <% } %>
          <% } %>
          <% if(pagecounter) { %>
          <div class="center">
            <ul class="pagination style_1 mb-5">
              <% for(let p=1;p <= pagecounter; p++) {%>
              <% if(pageNum==p) {%><li class="active"><%}else{%><li><%}%> <a href="/<%- lang %>/blog?page=<%- p %>&category=<%- url %>"><%- p %></a></li>
              <% } %>
            </ul>
          </div>
          <% } %>
        </div>
      </div>
  </div>
